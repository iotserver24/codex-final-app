{
  "version": 2,
  "builds": [
    {
      "src": "xibe-app/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "xibe-app/dist"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/:path*",
      "destination": "https://api.xibe.app/:path*"
    },
    {
      "source": "/:path*",
      "destination": "/index.html"
    }
  ]
}
